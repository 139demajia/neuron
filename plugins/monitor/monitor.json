{
  "client-id": {
    "name": "Client ID",
    "name_zh": "客户端ID",
    "description": "Neuron MQTT client id",
    "description_zh": "Neuron MQTT客户端ID",
    "type": "string",
    "attribute": "required",
    "default": "${node-name}",
    "valid": {
      "length": 255
    }
  },
  "event-topic-prefix": {
    "name": "Event Topic Prefix",
    "name_zh": "事件主题前缀",
    "description": "Prefix of the topics to which publish event messages.",
    "description_zh": "事件消息发布的主题前缀",
    "type": "string",
    "attribute": "required",
    "default": "/neuron/{client-id}",
    "valid": {
      "length": 255
    }
  },
  "heartbeat-interval": {
    "name": "Heartbeat Interval",
    "name_zh": "心跳间隔",
    "description": "Interval in seconds between two heartbeat messages. Setting to zero will disable heartbeat monitoring.(seconds)",
    "description_zh": "两个心跳消息之间的间隔时间，设置为0将禁用心跳监控。(秒)",
    "attribute": "required",
    "type": "int",
    "default": 0,
    "valid": {
      "min": 0
    }
  },
  "heartbeat-topic": {
    "name": "Heartbeat Topic",
    "name_zh": "心跳主题",
    "description": "Topic to which publish heartbeat messages.",
    "description_zh": "心跳消息发布的主题",
    "type": "string",
    "attribute": "required",
    "default": "/neuron/${node-name}/heartbeat",
    "valid": {
      "length": 255
    }
  },
  "host": {
    "name": "Broker Host",
    "name_zh": "服务器地址",
    "description": "MQTT broker host",
    "description_zh": "MQTT服务器地址",
    "attribute": "required",
    "type": "string",
    "default": "broker.emqx.io",
    "valid": {
      "length": 255
    }
  },
  "port": {
    "name": "Broker Port",
    "name_zh": "服务器端口",
    "description": "MQTT broker port",
    "description_zh": "MQTT服务器端口",
    "attribute": "required",
    "type": "int",
    "default": 1883,
    "valid": {
      "min": 1024,
      "max": 65535
    }
  },
  "username": {
    "name": "Username",
    "name_zh": "用户名",
    "description": "User name",
    "description_zh": "用户名",
    "attribute": "optional",
    "type": "string",
    "default": "",
    "valid": {
      "length": 255
    }
  },
  "password": {
    "name": "Password",
    "name_zh": "密码",
    "description": "Password",
    "description_zh": "密码",
    "attribute": "optional",
    "type": "string",
    "default": "",
    "valid": {
      "length": 255
    }
  },
  "ssl": {
    "name": "SSL",
    "name_zh": "SSL",
    "description": "Enable SSL connection",
    "description_zh": "是否启用SSL连接",
    "attribute": "optional",
    "type": "bool",
    "default": false,
    "valid": {}
  },
  "ca": {
    "name": "CA",
    "name_zh": "CA证书",
    "description": "CA certificate file",
    "description_zh": "CA证书文件",
    "attribute": "required",
    "type": "file",
    "condition": {
      "field": "ssl",
      "value": true
    },
    "valid": {
      "length": 81960
    }
  },
  "cert": {
    "name": "Client Cert",
    "name_zh": "客户端证书",
    "description": "Client x509 certificate file",
    "description_zh": "客户端证书文件",
    "attribute": "optional",
    "type": "file",
    "condition": {
      "field": "ssl",
      "value": true
    },
    "valid": {
      "length": 81960
    }
  },
  "key": {
    "name": "Client Private Key",
    "name_zh": "客户端私钥",
    "description": "Client private key file",
    "description_zh": "客户端私钥文件",
    "attribute": "optional",
    "type": "file",
    "condition": {
      "field": "ssl",
      "value": true
    },
    "valid": {
      "length": 81960
    }
  },
  "keypass": {
    "name": "Keypass",
    "name_zh": "私钥密码",
    "description": "Private key password",
    "description_zh": "私钥密码",
    "attribute": "optional",
    "type": "string",
    "condition": {
      "field": "ssl",
      "value": true
    },
    "valid": {
      "length": 256
    }
  }
}